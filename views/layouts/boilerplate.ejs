        href="
        https://fonts.googleapis.com/css2?family=Bangers&family=Fira+Sans+Condensed:wght@400&family=Roboto:ital,wght@1,500&family=Abril+Fatface&family=Roboto+Condensed&family=Ubuntu:wght@300&display=swap"
        rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
