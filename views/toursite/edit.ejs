<% layout('layouts/boilerplate') %>

    <div class="row mb-auto">
        <div class="col-md-6 offset-md-3 mb">
            <h1 class="mb-3" id="heading">Edit TripSpot</h1>
            <form action="/toursite/<%=currsite._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <span id="form-data">
                    <div class="mb-3 float-start" style="width: 47%;">
                        <label class="form-label" for="title">Site</label>
                        <input class="form-control" type="text" id="title" name="toursite[title]"
                            value="<%-currsite.title%>" required>
                    </div>
                    <div class="mb-3 float-end" style="width: 47%;">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="toursite[location]"
                            value="<%-currsite.location%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">
                            <span class="form-file-text custom-file-label">Image Files</span>
                        </label>
                        <input type="file" class="form-control" id="images" name="image" accept=".jpeg,.png,.jpg"
                            multiple>
                        <p class="file-label"><small>Maximum of 3 photos</small></p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" cols="13" rows="3"
                            name="toursite[description]"><%-currsite.description%></textarea>
                    </div>
                </span>
                <div class="mb-3 float-start">
                    <button class="btn text-white submit-btn">Update
                        Tourspot</button>
                </div>
                <div class="mb-3 float-end">
                    <a class="btn btn-danger" href="/toursite/<%=currsite._id%>">Back</a>
                </div>
            </form>
        </div>
    </div>

    <style>
        .submit-btn {
            background-color: blueviolet;
        }

        .submit-btn:hover,
        .submit-btn:focus {
            background-color: rgb(109, 24, 189) !important;
        }

        .submit-btn:focus {
            box-shadow: 0 0 0 .25rem rgb(175, 112, 235);
        }
    </style>

    <script src="/javascripts/script.js"></script>